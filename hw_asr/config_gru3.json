{
  "name": "config_gru",
  "n_gpu": 1,
  "preprocessing": {
    "sr": 16000,
    "spectrogram": {
      "type": "MelSpectrogram",
      "args": {
        "n_mels": 64
      }
    }
  },
  "augmentations": {
    "wave": [
      {"type": "Gain", "args": {"p": 0.1, "sr": 16000}},
      {"type": "Noise", "args": {"p": 0.1, "noise_name": "trumpet", "noise_level": 20}},
      {"type": "PitchShifting", "args": {"p": 0.1, "sr": 16000, "n_steps": -5}}
    ],
    "spectrogram": [
      {"type": "FrequencyMasking", "args": {"p": 0.1, "frequency": 20}},
      {"type": "TimeMasking", "args": {"p": 0.1, "time": 10}}
    ]
  },
  "arch": {
    "type": "DeepSpeech",
    "args": {
      "n_feats": 64,
      "fc_hidden": 512,
      "lm_path": "hw_asr/pretrained/lm.binary"
    }
  },
  "data": {
    "train": {
      "batch_size": 16,
      "num_workers": 5,
      "datasets": [
        {
          "type": "LibrispeechDataset",
          "args": {
            "part": "train-clean-100",
            "max_audio_length": 20.0,
            "max_text_length": 220,
            "limit": -1
          }
        }
      ]
    },
    "val": {
      "batch_size": 16,
      "num_workers": 5,
      "datasets": [
        {
          "type": "LibrispeechDataset",
          "args": {
            "part": "dev-clean",
            "max_audio_length": 20.0,
            "max_text_length": 220,
            "limit": -1
          }
        }
      ]
    }
  },
  "optimizer": {
    "type": "Adam",
    "args": {
      "lr": 5e-4,
      "weight_decay": 1e-5
    }
  },
  "loss": {
    "type": "CTCLoss",
    "args": {}
  },
  "metrics": [
    {
      "type": "ArgmaxWERMetric",
      "args": {
        "name": "WER (argmax)"
      }
    },
    {
      "type": "ArgmaxCERMetric",
      "args": {
        "name": "CER (argmax)"
      }
    }
  ],
  "lr_scheduler": {
    "type": "OneCycleLR",
    "args": {
      "steps_per_epoch": 100,
      "epochs": 40,
      "anneal_strategy": "cos",
      "max_lr": 1e-3,
      "pct_start": 0.1
    }
  },
  "trainer": {
    "epochs": 40,
    "save_dir": "saved/",
    "save_period": 5,
    "verbosity": 2,
    "monitor": "min val_loss",
    "early_stop": 100,
    "writer": "wandb",
    "project_name": "hw1_gru",
    "len_epoch": 100,
    "grad_norm_clip": 10
  },
  "warm_start": "hw_asr/pretrained/model_best.pth"
}
