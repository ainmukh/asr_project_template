{
  "name": "quartznet_config2",
  "n_gpu": 1,
  "preprocessing": {
    "sr": 22050,
    "spectrogram": {
      "type": "MelSpectrogram",
      "args": {
        "n_mels": 64
      }
    }
  },
  "augmentations": {
    "wave": [
      {"type": "Gain", "args": {"p": 0.1, "sr": 22050}},
      {"type": "Noise", "args": {"p": 0.5, "noise_name": "trumpet", "noise_level": 20}},
      {"type": "PitchShifting", "args": {"p": 0.1, "sr": 22050, "n_steps": -5}}
    ],
    "spectrogram": [
      {"type": "FrequencyMasking", "args": {"p": 0.0, "frequency": 20}},
      {"type": "TimeMasking", "args": {"p": 0.0, "time": 100}}
    ]
  },
  "arch": {
    "type": "QuartzNet",
    "args": {
      "n_feats": 64,
      "lm_path": "hw_asr/pretrained/lm.binary"
    }
  },
  "data": {
    "train": {
      "batch_size": 64,
      "num_workers": 5,
      "datasets": [
        {
          "type": "LJSpeechDataset",
          "args": {
            "max_audio_length": 30,
            "max_text_length": 200,
            "limit": -1
          }
        }
      ]
    },
    "val": {
      "batch_size": 64,
      "num_workers": 5,
      "datasets": [
        {
          "type": "LJSpeechDataset",
          "args": {
            "max_audio_length": 30,
            "max_text_length": 200,
            "limit": -1
          }
        }
      ]
    }
  },
  "optimizer": {
    "type": "Adam",
    "args": {
      "lr": 5e-4
    }
  },
  "loss": {
    "type": "CTCLoss",
    "args": {}
  },
  "metrics": [
    {
      "type": "ArgmaxWERMetric",
      "args": {
        "name": "WER (argmax)"
      }
    },
    {
      "type": "ArgmaxCERMetric",
      "args": {
        "name": "CER (argmax)"
      }
    }
  ],
  "lr_scheduler": {
    "type": "StepLR",
    "args": {
      "step_size": 300,
      "gamma": 0.975 
    }
  },
  "trainer": {
    "epochs": 30,
    "save_dir": "saved/",
    "save_period": 5,
    "verbosity": 2,
    "monitor": "min val_loss",
    "early_stop": 100,
    "writer": "wandb",
    "project_name": "hw1_chk2.1",
    "len_epoch": 300,
    "grad_norm_clip": 10
  },
  "warm_start": "hw_asr/pretrained/model_best.pth"
}
