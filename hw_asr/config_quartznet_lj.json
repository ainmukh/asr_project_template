{
  "name": "quartznet_config",
  "n_gpu": 1,
  "preprocessing": {
    "sr": 22050,
    "spectrogram": {
      "type": "MelSpectrogram",
      "args": {
        "n_mels": 128
      }
    }
  },
  "augmentations": {
    "wave": [
      {"type": "Gain", "args": {"p": 0.1, "sr": 16000}},
      {"type": "Noise", "args": {"p": 0.1, "noise_name": "trumpet", "noise_level": 20}},
      {"type": "PitchShifting", "args": {"p": 0.1, "sr": 16000, "n_steps": -5}}
    ],
    "spectrogram": [
      {"type": "FrequencyMasking", "args": {"p": 0.1, "frequency": 20}},
      {"type": "TimeMasking", "args": {"p": 0.1, "time": 100}}
    ]
  },
  "arch": {
    "type": "QuartzNet",
    "args": {
      "n_feats": 128,
      "lm_path": ""
    }
  },
  "data": {
    "train": {
      "batch_size": 64,
      "num_workers": 5,
      "datasets": [
        {
          "type": "LJSpeechDataset",
          "args": {
            "max_audio_length": 30,
            "max_text_length": 200,
            "limit": -1
          }
        }
      ]
    },
    "val": {
      "batch_size": 64,
      "num_workers": 5,
      "datasets": [
        {
          "type": "LJSpeechDataset",
          "args": {
            "max_audio_length": 30,
            "max_text_length": 200,
            "limit": -1
          }
        }
      ]
    }
  },
  "optimizer": {
    "type": "Adam",
    "args": {
      "lr": 2e-2
    }
  },
  "loss": {
    "type": "CTCLoss",
    "args": {}
  },
  "metrics": [
    {
      "type": "ArgmaxWERMetric",
      "args": {
        "name": "WER (argmax)"
      }
    },
    {
      "type": "ArgmaxCERMetric",
      "args": {
        "name": "CER (argmax)"
      }
    }
  ],
  "lr_scheduler": {
    "type": "OneCycleLR",
    "args": {
      "steps_per_epoch": 150,
      "epochs": 30,
      "anneal_strategy": "cos",
      "max_lr": 5e-2,
      "pct_start": 0.15
    }
  },
  "trainer": {
    "epochs": 30,
    "save_dir": "saved/",
    "save_period": 5,
    "verbosity": 2,
    "monitor": "min val_loss",
    "early_stop": 100,
    "writer": "wandb",
    "project_name": "hw1_chk2.0",
    "len_epoch": 300,
    "grad_norm_clip": 10
  }
}
