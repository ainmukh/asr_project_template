{
  "name": "default_config",
  "n_gpu": 1,
  "preprocessing": {
    "sr": 16000,
    "spectrogram": {
      "type": "MelSpectrogram",
      "args": {
      }
    }
  },
  "augmentations": {
    "wave": [
      {"type": "Gain", "args": {"p": 0.1, "sr": 16000}},
      {"type": "Noise", "args": {"p": 0.1, "noise_name": "trumpet", "noise_level": 20}},
      {"type": "PitchShifting", "args": {"p": 0.1, "sr": 16000, "n_steps": -5}}
    ],
    "spectrogram": [
      {"type": "FrequencyMasking", "args": {"p": 0.1, "frequency": 20}},
      {"type": "TimeMasking", "args": {"p": 0.1, "time": 100}}
    ]
  },
  "arch": {
    "type": "BaselineModel",
    "args": {
      "n_feats": 128,
      "fc_hidden": 512,
      "lm_path": ""
    }
  },
  "data": {
    "train": {
      "batch_size": 2,
      "num_workers": 5,
      "datasets": [
        {
          "type": "LibrispeechDataset",
          "args": {
            "part": "train-clean-100",
            "max_audio_length": 20.0,
            "max_text_length": 200,
            "limit": 2
          }
        }
      ]
    },
    "val": {
      "batch_size": 20,
      "num_workers": 5,
      "datasets": [
        {
          "type": "LibrispeechDataset",
          "args": {
            "part": "dev-clean",
            "max_audio_length": 20.0,
            "max_text_length": 200,
            "limit": 2
          }
        }
      ]
    }
  },
  "optimizer": {
    "type": "SGD",
    "args": {
      "lr": 3e-4
    }
  },
  "loss": {
    "type": "CTCLoss",
    "args": {}
  },
  "metrics": [
    {
      "type": "ArgmaxWERMetric",
      "args": {
        "name": "WER (argmax)"
      }
    },
    {
      "type": "ArgmaxCERMetric",
      "args": {
        "name": "CER (argmax)"
      }
    }
  ],
  "lr_scheduler": {
    "type": "OneCycleLR",
    "args": {
      "steps_per_epoch": 100,
      "epochs": 50,
      "anneal_strategy": "cos",
      "max_lr": 4e-3,
      "pct_start": 0.2
    }
  },
  "trainer": {
    "epochs": 50,
    "save_dir": "saved/",
    "save_period": 5,
    "verbosity": 2,
    "monitor": "min val_loss",
    "early_stop": 100,
    "writer": "tensorboard",
    "project_name": "hw1_chk1.3",
    "len_epoch": 100,
    "grad_norm_clip": 10
  }
}
